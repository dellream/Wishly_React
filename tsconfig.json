{
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "module": "ESNext",
    "baseUrl": "./src",
    "paths": {
      "constants": ["styles/constants.scss"],
      "jsConstants": ["constants/index.ts"],
      "api/*": ["api/*"],
      "store": ["store/index.ts"],
      "routesConfig": ["routesConfig.ts"],
      "hooks": ["hooks/index.ts"],
      "actions/*": ["store/reducers/*"],
      "utils": ["utils/index.ts"],
      "types": ["types/index.ts"]
    },
//    "plugins": [{
//      "name": "typescript-plugin-css-modules",
//      "options": {
//        "customMatcher": "scss$",
//        "noUncheckedIndexedAccess": true
//      }
//    }],
    "allowUmdGlobalAccess": true,
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "target": "ES6",
    "outDir": "dist",
    "declaration": true,
    "skipLibCheck": true,
    "noEmit": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "allowUnreachableCode": false // правило ESLint: no-unreachable работает хуже
  }
}
